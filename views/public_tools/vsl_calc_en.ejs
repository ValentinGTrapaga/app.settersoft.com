<script>
    // Change ad spend range
    const adSpendRange = document.getElementById('adSpendRange');
    const adSpendText = document.getElementById('adSpendText');

    adSpendRange.addEventListener('input', (e) => {
        const value = e.target.value;
        adSpendText.innerHTML = `<%=currency%> ${value}`;
        updateResults();
    });

    // Change lead spend range
    const leadSpendRange = document.getElementById('leadSpendRange');
    const leadSpendText = document.getElementById('leadSpendText');

    leadSpendRange.addEventListener('input', (e) => {
        const value = e.target.value;
        leadSpendText.innerHTML = `<%=currency%> ${value}`;
        updateResults();
    });

    // Change lead ratio booking range
    const leadRatioBookingRange = document.getElementById('leadRatioBookingRange');
    const leadRatioBookingText = document.getElementById('leadRatioBookingText');

    leadRatioBookingRange.addEventListener('input', (e) => {
        const value = e.target.value;
        leadRatioBookingText.innerHTML = `${value}%`;
        updateResults();
    });

    // Change lead lifetime value range
    const leadLifetimeValueRange = document.getElementById('leadLifetimeValueRange');
    const leadLifetimeValueText = document.getElementById('leadLifetimeValueText');

    leadLifetimeValueRange.addEventListener('input', (e) => {
        const value = e.target.value;
        leadLifetimeValueText.innerHTML = `<%=currency%> ${value}`;
        updateResults();
    });

    // Change lead close ratio range
    const leadCloseRatioRange = document.getElementById('leadCloseRatioRange');
    const leadCloseRatioText = document.getElementById('leadCloseRatioText');

    leadCloseRatioRange.addEventListener('input', (e) => {
        const value = e.target.value;
        leadCloseRatioText.innerHTML = `${value}%`;
        updateResults();
    });

    // Calculate results
    function updateResults() {
        updateResultsDesktop();
        updateResultsMobile();
    }

    function updateResultsDesktop() {
        // First, get all values
        const adSpend = adSpendRange.value;
        const leadSpend = leadSpendRange.value;
        const leadRatioBooking = leadRatioBookingRange.value;
        const leadLifetimeValue = leadLifetimeValueRange.value;
        const leadCloseRatio = leadCloseRatioRange.value;

        // Second, get all elements of results
        const resultLeads = document.getElementById('resultLeads');
        const resultAgendas = document.getElementById('resultAgendas');
        const resultVentas = document.getElementById('resultVentas');
        const resultGanancia = document.getElementById('resultGanancia');
        const resultRetorno = document.getElementById('resultRetorno');

        // Third, calculate results
        const leads = adSpend / leadSpend;
        const agendas = leads * (leadRatioBooking / 100);
        const ventas = agendas * (leadCloseRatio / 100);
        const ganancia = (ventas * leadLifetimeValue) - adSpend;
        const retorno = ganancia / adSpend;

        // Fourth, update results
        resultLeads.innerHTML = Math.round(leads);
        resultAgendas.innerHTML = Math.round(agendas);
        resultVentas.innerHTML = Math.round(ventas);
        resultGanancia.innerHTML = `<%=currency%> ${Math.round(ganancia)}`;
        resultRetorno.innerHTML = `${Math.round(retorno)}X`;
    }

    function updateResultsMobile() {
        // First, get all values
        const adSpend = adSpendRange.value;
        const leadSpend = leadSpendRange.value;
        const leadRatioBooking = leadRatioBookingRange.value;
        const leadLifetimeValue = leadLifetimeValueRange.value;
        const leadCloseRatio = leadCloseRatioRange.value;

        // Second, get all elements of results
        const mResultLeads = document.getElementById('mResultLeads');
        const mResultAgendas = document.getElementById('mResultAgendas');
        const mResultVentas = document.getElementById('mResultVentas');
        const mResultGanancia = document.getElementById('mResultGanancia');
        const mResultRetorno = document.getElementById('mResultRetorno');

        // Third, calculate results
        const leads = adSpend / leadSpend;
        const agendas = leads * (leadRatioBooking / 100);
        const ventas = agendas * (leadCloseRatio / 100);
        const ganancia = (ventas * leadLifetimeValue) - adSpend;
        const retorno = ganancia / adSpend;

        // Fourth, update results
        mResultLeads.innerHTML = Math.round(leads);
        mResultAgendas.innerHTML = Math.round(agendas);
        mResultVentas.innerHTML = Math.round(ventas);
        mResultGanancia.innerHTML = `<%=currency%> ${Math.round(ganancia)}`;
        mResultRetorno.innerHTML = `${Math.round(retorno)}X`;
    }

</script>

