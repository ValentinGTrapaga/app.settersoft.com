    }
</style>

<script>
    // Change ad spend range
    const followersCountRange = document.getElementById('followersCount');
    const followersCountText = document.getElementById('followersCountText');

    followersCountRange.addEventListener('input', (e) => {
        const value = e.target.value;
        followersCountText.innerHTML = `${value}`;
        updateResults();
    });

    // Change lead spend range
    const followersChatsRange = document.getElementById('followersChats');
    const followersChatsText = document.getElementById('followersChatsText');

    followersChatsRange.addEventListener('input', (e) => {
        const value = e.target.value;
        followersChatsText.innerHTML = `${value}%`;
        updateResults();
    });

    // Change lead ratio booking range
    const bookingRatioRange = document.getElementById('bookingRatio');
    const bookingRatioText = document.getElementById('bookingRatioText');

    bookingRatioRange.addEventListener('input', (e) => {
        const value = e.target.value;
        bookingRatioText.innerHTML = `${value}%`;
        updateResults();
    });

    // Change lead lifetime value range
    const ticketSpendRange = document.getElementById('ticketSpend');
    const ticketSpendText = document.getElementById('ticketSpendText');

    ticketSpendRange.addEventListener('input', (e) => {
        const value = e.target.value;
        ticketSpendText.innerHTML = `<%=currency%> ${value}`;
        updateResults();
    });

    // Change lead close ratio range
    const leadCloseRatioRange = document.getElementById('leadCloseRatioRange');
    const leadCloseRatioText = document.getElementById('leadCloseRatioText');

    leadCloseRatioRange.addEventListener('input', (e) => {
        const value = e.target.value;
        leadCloseRatioText.innerHTML = `${value}%`;
        updateResults();
    });

    // Calculate results
    function updateResults() {
        updateResultsDesktop();
        updateResultsMobile();
    }

    function updateResultsDesktop() {
        // First, get all values
        const followers = followersCountRange.value;
        const followersChat = followersChatsRange.value;
        const bookingRatio = bookingRatioRange.value;
        const ticketSpend = ticketSpendRange.value;
        const leadCloseRatio = leadCloseRatioRange.value;

        console.log({
            followers,
            followersChat,
            bookingRatio,
            ticketSpend,
            leadCloseRatio
        })
        
        // Second, get all elements of results
        const resultLeads = document.getElementById('resultLeads');
        const resultAgendas = document.getElementById('resultAgendas');
        const resultVentas = document.getElementById('resultVentas');
        const resultGanancia = document.getElementById('resultGanancia');

        // Third, calculate results
        const leads = followers * (followersChat / 100);
        const agendas = leads * (bookingRatio / 100);
        const ventas = Math.round(agendas * (leadCloseRatio / 100));
        const ganancia = ventas * ticketSpend;

        // Fourth, update results
        resultLeads.innerHTML = Math.round(leads);
        resultAgendas.innerHTML = Math.round(agendas);
        resultVentas.innerHTML = Math.round(ventas);
        resultGanancia.innerHTML = `<%=currency%>${Math.round(ganancia)}`;
    }

    function updateResultsMobile() {
        // First, get all values
        const followers = followersCountRange.value;
        const followersChat = followersChatsRange.value;
        const bookingRatio = bookingRatioRange.value;
        const ticketSpend = ticketSpendRange.value;
        const leadCloseRatio = leadCloseRatioRange.value;

        // Second, get all elements of results
        const mResultLeads = document.getElementById('mResultLeads');
        const mResultAgendas = document.getElementById('mResultAgendas');
        const mResultVentas = document.getElementById('mResultVentas');
        const mResultGanancia = document.getElementById('mResultGanancia');

        // Third, calculate results
        const leads = followers * (followersChat / 100);
        const agendas = leads * (bookingRatio / 100);
        const ventas = Math.round(agendas * (leadCloseRatio / 100));
        const ganancia = ventas * ticketSpend;

        // Fourth, update results
        mResultLeads.innerHTML = Math.round(leads);
        mResultAgendas.innerHTML = Math.round(agendas);
        mResultVentas.innerHTML = Math.round(ventas);
        mResultGanancia.innerHTML = `<%=currency%>${Math.round(ganancia)}`;
    }

updateResults();
</script>

</html>