<script>
    const $form = document.querySelector('form');
    $form.addEventListener('submit', (e) => {
        e.preventDefault();
    });
    $form.addEventListener('change', (e) => {
        e.preventDefault();
        updateResults();
    });

    const $conversations = document.querySelector('#conversations');
    const $conversationsText = document.querySelector('#conversationsText');

    $conversations.addEventListener('input', (e) => {
        const value = e.target.value;
        $conversationsText.value = value;
    });

    $conversationsText.addEventListener('change', (e) => {
        const value = e.target.value;
        $conversations.value = value;
    });

    const $agenda = document.querySelector('#agenda');
    const $agendaText = document.querySelector('#agendaText');

    $agenda.addEventListener('input', (e) => {
        const value = e.target.value;
        $agendaText.value = value;
    });

    $agendaText.addEventListener('change', (e) => {
        const value = e.target.value;
        if (value > 100) {
            $agenda.value = 100;
            e.target.value = 100;
        } else {
            $agenda.value = value;
        }
    });

    const $sales = document.querySelector('#sales');
    const $salesText = document.querySelector('#salesText');

    $sales.addEventListener('input', (e) => {
        const value = e.target.value;
        $salesText.value = value;
    });

    $salesText.addEventListener('change', (e) => {
        const value = e.target.value;
        if (value > 100) {
            $sales.value = 100;
            e.target.value = 100;
        } else {
            $sales.value = value;
        }
    });

    const $ticket = document.querySelector('#ticket');
    const $ticketText = document.querySelector('#ticketText');

    $ticket.addEventListener('input', (e) => {
        const value = e.target.value;
        $ticketText.value = value;
    });

    $ticketText.addEventListener('change', (e) => {
        const value = e.target.value;
        $ticket.value = value;
    });

    function calculateSpendings(conversations) {
        const FIXED_SPENDING = 350;
        const RATE_OF_CONVERSATION = 0.18;

        return Math.round(FIXED_SPENDING + (RATE_OF_CONVERSATION * conversations));
    }

    function calculateAgendas(conversations, percentageOfAgenda) {
        percentage = percentageOfAgenda / 100;

        return Math.round(conversations * percentage);
    }

    function calculateTotalSales(percentageOfSales, agendas) {
        percentage = percentageOfSales / 100;

        return Math.round(agendas * percentage);
    }

    function calculateTotalIncomes(sales, ticketPrice) {
        return Math.round(sales * ticketPrice);
    }

    function calculateProfit(totalIncomes, spendings) {
        return Math.round(totalIncomes - spendings);
    }

    function updateResults() {
        const conversations = $conversations.value;
        const percentageOfAgenda = $agenda.value;
        const percentageOfSales = $sales.value;
        const ticketPrice = $ticket.value;

        const spendings = calculateSpendings(conversations);
        const agendas = calculateAgendas(conversations, percentageOfAgenda);
        const totalSales = calculateTotalSales(percentageOfSales, agendas);
        const totalIncomes = calculateTotalIncomes(totalSales, ticketPrice);
        const profit = calculateProfit(totalIncomes, spendings);

        const resultGastos = document.querySelectorAll('#resultGastos');
        const resultAgendas = document.querySelectorAll('#resultAgendas');
        const resultVentas = document.querySelectorAll('#resultVentas');
        const resultIngresos = document.querySelectorAll('#resultIngresos');
        const resultGanancia = document.querySelectorAll('#resultGanancia');

        resultGastos.forEach((element) => {
            element.innerText = spendings;
        });
        resultAgendas.forEach((element) => {
            element.innerText = agendas;
        });
        resultVentas.forEach((element) => {
            element.innerText = `<%=currency%> ${totalSales}`;
        });
        resultIngresos.forEach((element) => {
            element.innerText = `<%=currency%> ${totalIncomes}`;
        });
        resultGanancia.forEach((element) => {
            element.innerText = `<%=currency%> ${profit}`;
        });
    }
</script>

</html>
