            padding-right: 40px;
            text-align: center;
            font-weight: bold;
            color: #0239d0;
        }

        /* Padding into TH  */
        .result-calc-container table th {
            padding-right: 40px;
            font-size: 10pt;
            font-weight: 300;
            text-align: center;
            font-family: 'Prompt', sans-serif;
        }

        /* Font of all table */
        .result-calc-container table td {
            font-family: 'Prompt', sans-serif;
